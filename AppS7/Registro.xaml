<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS7.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Blue">
                <Label Text="Registrar usuario"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="24" TextColor="White"/>
            </Frame>
            <Entry x:Name="name" Placeholder="nombres"/>
            <Entry x:Name="lastname" Placeholder="apellidos"/>
            <Entry x:Name="direccion" Placeholder="direccion"/>
            <Entry x:Name="cedula" Placeholder="cedula"/>
            <Entry x:Name="usuario" Placeholder="usuario"/>
            <Entry x:Name="password" IsPassword="true"  Placeholder="password"/>
            
            <Button x:Name="btnGuardar" Background="blue" TextColor="White" Text="Guardar" Clicked="btnGuardar_Clicked"/>
            <Button x:Name="btnRegresar" Background="orange" TextColor="White" Text="Regresar" Clicked="btnRegresar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>